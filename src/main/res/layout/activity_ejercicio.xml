<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.dev4u.hv.guia5_ejemplo.EjercicioActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/cinta" />

    <ImageView
        android:id="@+id/imgcentro"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        app:srcCompat="@drawable/corona" />

    <ImageView
        android:id="@+id/imgderecha"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/imgcentro"
        android:layout_toEndOf="@+id/imgcentro"
        app:srcCompat="@drawable/corona" />

    <ImageView
        android:id="@+id/imgizquierda"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/imgcentro"
        android:layout_toStartOf="@+id/imgcentro"
        app:srcCompat="@drawable/corona" />

    <Button
        android:id="@+id/btnIzquierda"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="197dp"
        android:layout_toStartOf="@+id/btnCentro"
        android:background="@drawable/fondo_boton"
        android:text="IZQ" />

    <Button
        android:id="@+id/btnCentro"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="197dp"
        android:background="@drawable/fondo_boton"
        android:text="centro" />

    <Button
        android:id="@+id/btnDerecha"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnIzquierda"
        android:layout_toEndOf="@+id/btnCentro"
        android:background="@drawable/fondo_boton"
        android:text="der" />
</RelativeLayout>
